<resources>
    <style name="Base.Theme.ScientificCalculator" parent="Theme.AppCompat.Light.NoActionBar">
    </style>

    <style name="Theme.ScientificCalculator" parent="Base.Theme.ScientificCalculator" />

    <style name="CalculatorButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_gravity">fill</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_margin">4dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:backgroundTint">#505050</item>
    </style>

    <style name="CalculatorButton.Number" parent="CalculatorButton">
        <item name="android:backgroundTint">#505050</item>
    </style>

    <style name="CalculatorButton.Operator" parent="CalculatorButton">
        <item name="android:backgroundTint">#FF9500</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="CalculatorButton.Function" parent="CalculatorButton">
        <item name="android:backgroundTint">#D4D4D2</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="CalculatorButton.Clear" parent="CalculatorButton">
        <item name="android:backgroundTint">#FF5722</item>
    </style>

    <style name="CalculatorButton.Result" parent="CalculatorButton">
        <item name="android:backgroundTint">#03A9F4</item>
    </style>

</resources>